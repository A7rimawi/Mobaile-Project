<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="24dp"
    android:background="#669ab9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Subject"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"/>
        <EditText
            android:id="@+id/edtSbjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#C3B1B1"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:boxStrokeColor="@color/black"
            android:hint="Subject Name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtSubjectCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#C3B1B1"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:boxStrokeColor="@color/black"
            android:hint="Subject Code"
            android:padding="12dp" />
        <EditText
            android:id="@+id/edtTeacherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="#C3B1B1"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:boxStrokeColor="@color/black"
            android:hint="Teacher Name"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtClass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="32dp"
            android:background="#C3B1B1"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:boxStrokeColor="@color/black"
            android:hint="Class"
            android:padding="12dp" />

        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="32dp"
            android:background="#C3B1B1"
            android:backgroundTint="#FFFFFF"
            android:backgroundTintMode="src_over"
            android:boxStrokeColor="@color/black"
            android:hint="Discription"
            android:padding="12dp" />
        <Button
            android:id="@+id/btnAddSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Subject"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/black"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
